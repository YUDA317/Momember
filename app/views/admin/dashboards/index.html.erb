<div class="container">
  <h2 class="mt-2">全ユーザー一覧</h2>
  <ul>
    <% @users.each do |user| %>
      <li class="mt-2">
        <%= image_tag user.get_profile_image, size: "100x100" %> - <%= user.name %>
        <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' } %>
      </li>
    <% end %>
    <%= paginate @users %>
  </ul>
</div>