<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row align-items-center my-2">
    <h2 class="col-4">アカウント編集</h2>
    <button type="button" class="btn btn-outline-danger offset-4">
      <%= link_to destroy_user_session_path, method: :delete, class: 'text-danger' do %>
        <h4>ログアウト</h4>
      <% end %>
    </button>
  </div>
    <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="user_name">アカウント名</label>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <label>プロフィール画像変更</label>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.submit "更新" %>
      </div>
    <% end %>
</div>
