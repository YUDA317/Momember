<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
    <h2 class="col-2 mt-2">投稿編集</h2>
    <button type="button" class="btn btn-outline-danger offset-6 col-2 mt-2">
      <%= link_to "投稿を削除", post_path(@post),  method: :delete, class: 'text-danger' %>
    </button>
    <div class="col-4">
      <% @post.images.each do |image| %>
        <%= image_tag(image, width:100) %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <%= form_with model: @post do |f| %>
    <div class="col-12 mt-2">
      <div class="form-group">
        <label for="post_tag_body">ハッシュタグ</label>
        <%= f.text_area :tag_body %>
      </div>
      <div class="form-group">
        <label for="post_body">本文</label>
        <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <label for="post_address">住所</label>
        <%= f.text_field :address %>
        <label for="post_lat">緯度</label>
        <%= f.text_field :lat %>
        <label for="post_lng">経度</label>
        <%= f.text_field :lng %>
      </div>
      <div class="form-group">
        <%= f.submit '更新' %>
      </div>
      </div>
    <% end %>
  </div>
</div>