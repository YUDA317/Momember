<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-6"></div>
    <h2 class="col-6 ml-5 mt-2">投稿</h2>
  </div>
    <%= form_with model: @post do |f| %>
    <div class="row">
      <div class="col-4"></div>
      <div class="col-8 d-flex align-items-stretch ml-5">
        <div class="form-group col-12">
          <%= f.label :images, '画像を選択' %>
          <%= f.file_field :images, multiple: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-6"></div>
      <div class="col-6 ml-5">
        <div>
          <%= f.text_area :tag_body %>
          <%= f.hidden_field :lat %>
          <%= f.hidden_field :lng %>
          <%= f.hidden_field :address %>
          <div>
            <h2>投稿したい場所を選択</h2>

            <input id="address" type="textbox">
            <input type="button" value="検索" onclick="codeAddress()">
            <!-- 下の1行を追加 -->
            <div id="display">緯度,経度</div>

            <div id='map' style="height: 600px;width: 810px;"></div>

          </div>

        </div>
      </div>
    </div>

    <div class="row align-items-center">
      <div class="ml-5"></div>
      <div class="col-6">
        <%= f.text_area :body, class: 'text-area mt-2' %>
      </div>
      <div class="col-2"></div>
      <div class="col-2">
        <%= f.submit '投稿' %>
      </div>
    </div>
      <% end %>

    <div class="input-field"></div>
  </div>
